# Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local or .env files with real secrets to GitHub

# Application Configuration
# VITE_APP_NAME=Nivra
# VITE_APP_VERSION=1.0.0

# API Keys (if needed in the future)
# VITE_API_KEY=your_api_key_here
# VITE_API_URL=https://api.example.com

# Analytics (if needed)
# VITE_ANALYTICS_ID=your_analytics_id

# Feature Flags
# VITE_ENABLE_ANALYTICS=false

# Firebase Configuration
# Get these values from Firebase Console: https://console.firebase.google.com
# Create a new project → Project Settings → General → Your apps → Web app
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Enable/disable Firebase real-time sync (true/false)
VITE_ENABLE_FIREBASE_SYNC=true

# Note: Only variables prefixed with VITE_ are exposed to the client-side code
# Never store sensitive backend secrets in VITE_ variables
